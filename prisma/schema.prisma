generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Reviews {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  nameReview String
  descReview String
  // author     Users  @relation(fields: [usersId], references: [id])
  // usersId    String @db.ObjectId
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String  @unique
  password String
  // Reviews  Reviews[]
}
