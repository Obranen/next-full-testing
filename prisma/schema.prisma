// learn more review it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String    @unique
  password String
  reviews  Review[]
  product  Product[]
}

model Category {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  value       String        @unique
  label       String
  subCategory SubCategory[]
}

model SubCategory {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  value      String    @unique
  label      String
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @db.ObjectId
}

model Review {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  nameReview String
  descReview String
  user       User?   @relation(fields: [userId], references: [id])
  userId     String? @db.ObjectId
}

model Product {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime?      @default(now())
  updatedAt   DateTime?      @updatedAt
  imageAlt    String
  imageSrc    String
  images      ProductImage[]
  // role    Role     @default(BASIC)
  titleEn     String
  titleRu     String?
  titleUa     String?
  currencyEn  String
  currencyRu  String?
  currencyUa  String?
  descEn      String
  descRu      String?
  descUa      String?
  weight      Int
  price       Int
  quantity    Int
  stock       Int
  category    String
  subCategory String
  user        User?          @relation(fields: [userId], references: [id])
  userId      String?        @db.ObjectId
}

model ProductImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  src       String
  alt       String
  product   Product? @relation(fields: [productId], references: [id])
  productId String?  @db.ObjectId
}

enum Role {
  BASIC
  MIDLE
  ADMIN
}
