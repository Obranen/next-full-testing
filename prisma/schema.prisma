generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String   @unique
  password String
  reviews  Review[]
}

model Review {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  nameReview String
  descReview String
  author     User?   @relation(fields: [authorId], references: [id])
  authorId   String? @db.ObjectId
}
